<div class="container">
  <div class="row my-5">
    <div class="col-sm-3">
      <h2 class="text-info text-opacity-25">いいね一覧</h2>
    </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="border-dark bg-active">投稿者</th>
            <th class="border-dark bg-active">タイトル</th>
            <th class="border-dark bg-active">投稿文</th>
            <th class="border-dark bg-active">コメント</th>
            <th class="border-dark bg-active">いいね</th>
            <th class="border-dark bg-active">投稿日時</th>
          </tr>
        </thead>
      <tbody>
        <% @favorite_posts.each do |post|%>
        <tr>
            <td>
              <% if post.user.profile_image.attached? %>
                <%= image_tag post.user.profile_image, class: "rounded-circle", size: "40x40"  %>
              <% else %>
                <%= image_tag 'no_image',class: "rounded-circle", size: "40x40", id: "profile_img"  %>
              <% end %>
              <p><%= post.user.name %></p>
            </td>
            <td>
              <%= link_to post_path(post.id) do %>
                <%= post.title.truncate(10) %>
              <% end %>
            </td>
            <td><%= post.text.truncate(10) %></td>
            <td><%= link_to "#{post.comments.count}件", post_path(post.id) %></td>
            <td>
              <% if post.favorited_by?(current_user) %>
                <p>
                  <%= link_to post_favorite_path(post), method: :delete do %>
                    ♥<%= post.favorites.count %>
                  <% end %>
                </p>
              <% else %>
                <p>
                  <%= link_to post_favorite_path(post), method: :post do %>
                    ♡<%= post.favorites.count %>
                  <% end %>
                </p>
              <% end %>
            </td>
            <td><%= post.created_at.strftime('%Y/%m/%d  %H:%M') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>