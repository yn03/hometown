<div class="container">
  <div class="row my-5">
    <div class="col-sm-3">
      <h3>投稿一覧</h3>
    </div>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>投稿文</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to user_path(post.user.id) do %>
                <%#= image_tag post.user.get_profile_image.variant(resize: "80x80!") %>
              <% end %>
            </td>
            <td>
              <%= link_to post_path(post.id) do %>
                <%= post.title %>
              <% end %>
            </td>
            <td><%= post.text %></td>
            <td colspan="3"></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>