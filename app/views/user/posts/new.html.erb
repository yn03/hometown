<div class="container">
  <div class="row my-5">
    <div class="col-sm-3">
    <h3>投稿フォーム</h3>
      <%= form_with model:@post,local:true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control post_title' %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :text, class: 'form-control post_body' %>
        </div>

        <%= f.select :place_id, options_from_collection_for_select( Place.all, :id, :name),include_blank: "都道府県" %>
        <%= f.select :genre_id, options_from_collection_for_select( Genre.all, :id, :name),include_blank: "ジャンル" %>
        <div class="text-center">
          <%= f.submit "投稿", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>