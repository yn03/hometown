<div class="container">
  <div class="row mt-4">
    <h4>マイページ編集</h4>
  </div>
  <%= form_with model: @user, url: user_path, id: "form" do |f| %>
    <div class="form-group">
      <label for="user_image">プロフィール画像</label>
      <%=f.file_field :profile_image, acoept: "image/*" %>
      <div class="form-group row m-2">
        <label class="col-sm-2 col-form-label">名前</label>
        <div class="col-sm-10">
          <%= f.text_field :name %>
        </div>
        <label class="col-sm-2 col-form-label">自己紹介文</label>
        <div class="col-sm-10">
          <%= f.text_area :introduction %>
        </div>
        <%= f.submit "変更を保存", class:"btn btn-success" %>
        <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
