<header>
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#8FBC8F	;">
    <div class="container">
      <nav class="navbar-brand navbar-left header-logo">
       <%= link_to image_tag("logo.png", size: "70x50"), root_path, class: "header-button btn text-light" %>
      </nav>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="nav navbar-nav ml-auto">

        <!-- 顧客がログインしている時 -->
        <% if user_signed_in? %>
          <li><%= link_to "マイページ", user_path(current_user.id), class: "header-button btn text-light" %></li>
          <li><%= link_to "みんなの投稿", posts_path, class: "header-button btn text-light" %></li>
          <li><%#= link_to "投稿する", new_post_path, class: "header-button btn text-light" %></li>
          <li><%#= link_to "ランキング" ,ranking_posts_path, class: "header-button btn text-light" %></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header-button btn text-light" %></li>

        <!-- 管理者がログインしている時 -->
        <% elsif admin_signed_in? %>
          <li><%= link_to "ユーザ一覧", admin_users_path, class: "header-button btn text-light" %></li>
          <li><%= link_to "投稿一覧", admin_posts_path, class: "header-button btn text-light" %></li>
          <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "header-button btn text-light" %></li>

        <!-- ログインしていない時 -->
        <% else %>
          <li><%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "header-button btn text-light" %></li>
          <li><%= link_to "新規登録", new_user_registration_path, class: "header-button btn text-light" %></li>
          <li><%= link_to "ログイン", new_user_session_path, class: "header-button btn text-light" %></li>
        <% end %>

        <!-- 検索機能 -->
        <%= form_with(url: search_posts_path, local: true, method: :get, class: "d-flex" ) do |f| %>
          <%= f.text_field :keyword, class: "ml-2 form-control me-2", placeholder: "Search" %>
          <%= button_tag type: "submit", class: "btn btn-outline-light ml-2" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </nav>
</header>