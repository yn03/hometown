<div class="container">
  <div class="row my-5">
    <div class="col-sm-3">
      <h3>投稿一覧</h3>
    </div>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>投稿者</th>
          <th>タイトル</th>
          <th>投稿文</th>
          <th>コメント数</th>
          <th>いいね数</th>
          <th><th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.user.profile_image, class: "rounded-circle", size: "40x40"  %></td>
            <td><%= post.title %></td>
            <td><%= post.text %></td>
            <td><%= post.comments.count %></td>
            <td><%= post.favorites.count %></td>
            <td><%= link_to '詳細', admin_post_path(post.id), class:"btn btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>