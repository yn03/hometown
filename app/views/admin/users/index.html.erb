<div class="container my-4">

  <h3 class="text-info text-center text-opacity-25">会員一覧</h3>
  <table class="table table-hover col-md-8 mx-auto">
    <thead>
      <tr>
        <th class="border-dark table-active">ユーザー名</th>
        <th class="border-dark table-active">会員ステータス</th>
        <th class="border-dark table-active"></th>
        <th class="border-dark table-active"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <% if user.profile_image.attached? %>
              <%= image_tag user.profile_image, class: "rounded-circle", size: "40x40"  %>
            <% else %>
              <%= image_tag 'no_image',class: "rounded-circle", size: "40x40", id: "profile_img"  %>
            <% end %>
            <p><%= user.name %></p>
          </td>
          <td>
            <% if user.is_deleted == false %>
              <p class="text-success mt-4">有効</p>
            <% else %>
              <p class="text-secondary mt-4">退会</p>
            <% end %>
          </td>
          <td></td>
          <td><%= link_to "詳細", admin_user_path(user), class: "btn btn-outline-primary mt-3" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>